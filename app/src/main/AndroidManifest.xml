<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.walkin">

    <uses-permission android:name="android.permission.CPAYSDK_SWIPE_MODULE"/>
    <uses-permission android:name="android.permission.CPAYSDK_IC_MODULE"/>
    <uses-permission android:name="android.permission.CPAYSDK_RF_MODULE"/>
    <uses-permission android:name="android.permission.CPAYSDK_PRINTER_MODULE"/>
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:name="com.example.walkin.cyp.app.WalkinApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.Light.NoActionBar">
        <activity android:name=".cyp.CheckOutActivity" />
        <activity android:name=".cyp.HomeActivity" />
        <activity android:name=".cyp.CheckInActivity" />
        <activity android:name=".cyp.ScanActivity" />
        <activity android:name=".cyp.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
                <category android:name="android.intent.category.HOME" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity android:name=".cyp.TotalCheckInActivity" />
        <activity android:name=".cyp.TotalCheckOutActivity" />
        <activity android:name=".cyp.TotalRemainActivity" />
        <activity android:name=".cyp.TotalVisitorActivity" />
    </application>

</manifest>